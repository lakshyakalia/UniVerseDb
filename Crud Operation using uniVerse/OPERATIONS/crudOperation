$INCLUDE UNIVERSE.INCLUDE ODBC.H

STATUS = SQLAllocEnv(DBCENV)
IF STATUS <> SQL.SUCCESS THEN STOP "Failed to allocate an ODBC environment"

STATUS = SQLAllocConnect(DBCENV,CONENV)
IF STATUS <> SQL.SUCCESS THEN STOP "Failed to allocate a CONNECT environment"

STATUS = SQLAllocStmt(CONENV,STMTENV)

SOURCE = "localuv"

UID=""
PWD=""


STATUS = SQLConnect(CONENV,SOURCE,UID,PWD)


PRINT "******** WELCOME TO CRUD OPERATIONS . ENTER 1 TO INSERT RECORDS , 2 TO VIEW RECORDS , 3 TO UPDATE RECORDS , 4 TO DELETE RECORDS, 5 TO EXIT RECORDS ********"

INPUT choice

LOOP
WHILE choice >< 5 DO
IF choice=1
THEN 
#INCLUDE insert
END
IF choice=2 
THEN
#INCLUDE read
END
IF choice=3
THEN
#INCLUDE update
END
IF choice=4 THEN
#INCLUDE delete
END

PRINT "******** WELCOME TO CRUD OPERATIONS . ENTER 1 TO INSERT RECORDS , 2 TO VIEW RECORDS , 3 TO UPDATE RECORDS , 4 TO DELETE RECORDS ********"
INPUT choice
REPEAT
END


